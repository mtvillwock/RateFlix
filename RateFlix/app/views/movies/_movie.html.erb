<div class="movie">
  <p class="title">Title:<%= link_to "/movies/#{movie.id}" do %><%= movie.title %><% end %></p>
  <p class="genre">Genre(s):
    <% if movie.genres.length > 0 %>
    <% movie.genres.each do |genre| %>
    <%= genre.name %>
    <% end %>
    <% end %>
  </p>
  <p class="release-date">Release Date: <%= movie.release_date %></p>
</div>