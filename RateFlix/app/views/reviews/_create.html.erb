<%= form_for(@review) do |f| %>
  <p>
    <%= f.text_field :user_email, placeholder: "your email" %>
  </p>
  <p>
    <%= f.text_field :rating, placeholder: "rating" %>
  </p>
  <p>
    <%= f.text_area :name, placeholder: "additional comment" %>
  </p>
  <p>
    <%= select_date Date.today, prefix: :date_published %>
  </p>
  <%= f.submit %>
<% end %>